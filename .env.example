# Example environment variables for your Next.js portfolio project

# Algolia Search
NEXT_PUBLIC_ALGOLIA_APP_ID=YourAlgoliaAppID
NEXT_PUBLIC_ALGOLIA_SEARCH_KEY=YourAlgoliaSearchKey

# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://your-supabase-url.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# GitHub Auth (NextAuth.js)
GITHUB_ID=your-github-client-id
GITHUB_SECRET=your-github-client-secret

# Sentry
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn

# Sanity
NEXT_PUBLIC_SANITY_PROJECT_ID=your-sanity-project-id
NEXT_PUBLIC_SANITY_DATASET=production
NEXT_PUBLIC_SANITY_API_TOKEN=your-sanity-api-token

# OpenAI
OPENAI_API_KEY=your-openai-api-key

# Pinecone
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=your-pinecone-environment

# Clerk (optional)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=your-clerk-publishable-key
CLERK_SECRET_KEY=your-clerk-secret-key
